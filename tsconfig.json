{
  "compilerOptions": {
    "jsx": "react-jsx",
    "lib": ["ES2021", "DOM"],
    "module": "ESNext",
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "moduleResolution": "bundler",
    "useDefineForClassFields": true,
    "allowImportingTsExtensions": true
  },
  "include": ["src", "example/index.tsx", "example/App.tsx", "example/env.d.ts"]
}
